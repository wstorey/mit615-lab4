<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Users</h1>
      </div>

      <table class="table table-hover">
        <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td>
              <div class="btn-group-vertical">
                <%= link_to 'Show', user, class: 'btn btn-default btn-sm' %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn-sm' %>
                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <div class="panel-footer">
        <%= link_to 'New User', new_user_path, class: 'btn btn-default' %>
      </div>
    <%= will_paginate @users %>
    </div>
  </div>
</div>